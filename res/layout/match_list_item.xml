<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/match_id"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
	    android:layout_weight="0"
        android:text=""
        android:visibility="invisible" >
    </TextView>
 
    <TextView
	    android:id="@+id/match_ref"
        android:layout_width="100dip"
	    android:layout_height="wrap_content"
	    android:paddingLeft="6dip"
	    android:layout_weight="1"
	    android:singleLine="true"
	    android:text="@string/txt_match_ref" >
	</TextView>

	<TextView
	    android:id="@+id/match_club_a"
        android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:paddingLeft="6dip"
	    android:layout_weight="2"
	    android:singleLine="true"
	    android:text="@string/txt_match_club_a" >
	</TextView>

	<TextView
	    android:id="@+id/match_club_b"
        android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:paddingLeft="6dip"
	    android:layout_weight="2"
	    android:singleLine="true"
	    android:text="@string/txt_match_club_b" >
	</TextView>

	<TextView
	    android:id="@+id/match_date"
        android:layout_width="100dip"
	    android:layout_height="wrap_content"
	    android:paddingLeft="6dip"
	    android:layout_weight="2"
	    android:singleLine="true"
	    android:text="@string/txt_match_date" >
	</TextView>

    <TextView
	    android:id="@+id/match_location"
        android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:paddingLeft="6dip"
	    android:layout_weight="2"
	    android:singleLine="true"
	    android:text="@string/txt_match_location" >
	</TextView>

</LinearLayout>
