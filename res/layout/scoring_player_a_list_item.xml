<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_player_a_name"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:text="@string/txt_player_title" >
    </TextView>

    <TextView
        android:id="@+id/txt_player_a_num"
        android:layout_width="25dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@+id/txt_player_a_name"
        android:layout_marginLeft="2dip"
        android:text="@string/txt_period_init" >
    </TextView>

    <TextView
        android:id="@+id/txt_player_a_exclu"
        android:layout_width="50dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@+id/txt_player_a_num"
        android:layout_marginLeft="2dip"
        android:text="@string/txt_exclu_init" >
    </TextView>

</RelativeLayout>
